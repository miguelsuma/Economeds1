<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".Menu_us_far">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:layout_marginBottom="20dp"
        android:background="@color/teal_200">
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ECONOMEDS"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textSize="40dp"
        android:drawableLeft="@drawable/ic_drugs"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/editTextBuscar"
        android:layout_marginTop="50dp"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:hint="Ingresar medicamento" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_buscarMed"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingTop="15dp"
            android:paddingRight="50dp"
            android:drawableLeft="@drawable/ic_search"
            android:paddingBottom="14dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_border"
            android:text="Buscar" />
    <Button
        android:id="@+id/btn_menu1_user"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:layout_marginTop="15dp"
        android:paddingRight="5dp"
        android:paddingBottom="14dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_border"
        android:text="Ingresar" />

    <Button
        android:id="@+id/btn_menu1_farm"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="8dp"
        android:paddingRight="5dp"
        android:paddingBottom="14dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_border"
        android:text="Registro" />

    </LinearLayout>

</LinearLayout>
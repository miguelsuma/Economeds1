<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="top"
    tools:context=".User_Activity.User_Buscador">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/far">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Busqueda"
            android:layout_marginTop="10dp"
            android:textSize="24dp"
            android:textAlignment="center"
            android:gravity="center_horizontal">
        </TextView>

        <ImageView
            android:id="@+id/imageViewUsuario"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/pills" />
        <TableRow
            android:layout_width="310dp"
            android:layout_height="match_parent"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp">

            <EditText
                android:id="@+id/txt_buscador"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="15dp"
                android:background="@drawable/rounded_border"
                android:layout_marginRight="20dp"/>

            <Button
                android:id="@+id/btn_buscar_farmacia"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_border"
                android:text="Buscar"
                android:textSize="10dp" />
        </TableRow>
    </FrameLayout>




    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp" />

</LinearLayout>